@using QA.DotNetCore.Engine.Widgets

@model DemoWebSite.PagesAndWidgets.Pages.TextPage
@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title (@Model.Alias - @Model.Id) </h2>

@Html.Raw(Model.Text)
<div>
    Ссылка - 
    @Html.ActionLink("link do details", "details", new { id = "some-alias", page = 2, r = 4 })

    @if (!String.IsNullOrWhiteSpace(Model.Picture))
